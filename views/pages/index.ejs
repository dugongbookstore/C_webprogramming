<!-- Carousel -->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block" src="/public/img/promogabungan.png" alt="Promo1" onclick="window.open('/promo#promo2')">
        </div>
        <div class="carousel-item">
            <img class="d-block" src="/public/img/promo3.png" alt="Promo2" onclick="window.open('/promo#promo3')">
        </div>
        <div class="carousel-item">
            <img class="d-block" src="/public/img/na.png" alt="NewArriv">
            <div class="carousel-caption d-none d-md-block">
                <h1>New Arrival</h1>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<!-- Button Lihat Semua Promo -->
<div class="text-center">
    <a href="/promo" class="btn mx-auto btn-outline-primary ">Lihat Semua Promo</a>
</div>
<!-- Best Seller -->
<div class="container">
    <h1>Best Seller</h1>
    <div class="row">
        <% if (!recom.length==0) { %>
            <% recom.forEach((recom) => { %>
                <form action="public/<%= recom.ISBN %>" method="GET" class="mx-auto">
                    <button type="submit" class="card mx-auto my-4"  style="width: 300px; height: 420px;">
                        <img src="public/<%= recom.cover %>">
                    </button>
                </form>
            <% }); %>
        <% } else {%>
            <p>Belum ada buku best seller :(</p>
        <% } %>
    </div>
</div>
<!--Newsletter-->
<div id="news"></div>
<div class="subscribe mx-auto">
    <h3>Subscribe untuk mendapatkan promo menarik!</h3>
    <br>
    <form action="/email" method="post" class="form-inline justify-content-center">
        <input type="email" class="form-control form-control-lg col-5" name="newsLetter" required placeholder="Email anda" value>
        <input type="submit" class="btn btn-primary ml-3" name="submit" value="Dapatkan promo!">
        <% if (messages.emailError) { %>
            <span class="text-danger pl-2"><b><%= messages.emailError %></b></span>
        <% } else if (messages.emailOK) { %>
            <span class="text-success pl-2"><b><%= messages.emailOK %></b></span>
        <% } %>
    </form>
    <br>
</div>
    
<%- contentFor('title') %>
Dugong Bookstore