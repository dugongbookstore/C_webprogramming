<div class="container my-5">
    <h1>Update</h1> <hr>
    <div class="w-100 mx-2">
        <form action="/list/update" enctype="multipart/form-data" method="POST">
            <pre>
                <% if (!book.length == 0){ %>
                    <% book.forEach((book)=> { %>
                        <div>
        <label for="type">Type: </label>
            <% if (book.Type == "novel") { %>
            <input type="radio" id="type" name="type" value="komik"> Komik
            <input type="radio" id="type" name="type" value="novel" checked> Novel
            <% } else { %>
            <input type="radio" id="type" name="type" value="komik" checked> Komik
            <input type="radio" id="type" name="type" value="novel"> Novel
            <% } %>
                        
        <label for="status">Status: </label>
            <% if (book.Status == "impor") { %>
            <input type="radio" id="status" name="status" value="lokal"> lokal
            <input type="radio" id="status" name="status" value="impor" checked> impor
            <% } else { %>
            <input type="radio" id="status" name="status" value="lokal" checked> lokal
            <input type="radio" id="status" name="status" value="impor"> impor
            <% } %>
                        </div>
                        <div>
        <label for="name">Title</label> 
            <input type="text" id="name" placeholder="Title" 
                value="<%=book.Judul%>" name="name" required> 
                        
        <label for="author">Author</label> 
            <input type="text" id="author" placeholder="Author" 
                value="<%=book.Author%>" name="author" required> 
                        
        <label for="year">Year</label> 
            <input type="text" id="year" placeholder="Year" 
                value="<%=book.Tahun%>" name="year" required> 
                        
        <label for="ISBN">ISBN</label> 
            <input type="text" id="ISBN" placeholder="ISBN" 
                value="<%=book.ISBN%>" name="ISBN" required> 
                        
        <label for="lokasi">Lokasi</label> 
            <input type="text" id="lokasi" placeholder="Lokasi" 
                value="<%= book.Pos %>" name="lokasi" required> 
                        
        <label for="stok">Stok</label> 
            <input type="number" min="0" id="stok" placeholder="Stok" 
                value="<%= book.Stok %>" name="stok" required> 
                        
        <label for="sinopsis">Sinopsis</label> 
            <textarea id="sinopsis" style="width: 500px;" name="sinopsis" rows="10" 
                placeholder="Sinopsis" required> 
                <%= book.sinopsis %>
            </textarea>
                        
        <label for="image">Upload Image</label> 
            <input type="file" id="image" 
                name="book" value="" required> 
            <div class="image_edit" style="border: 1px bold black;">
                <img src="../../public/<%= book.cover %>" alt="image">
            </div>
                        </div>
                    <% }) %>
                <% } %> 
                <div> 
                    <!-- ------------- -->
                    <button type="submit" class="btn btn-primary" data-id="editPage">Submit</button> 
                    
                    <!-- <a href="./list" type="submit" class="btn btn-primary">Submit</a> -->
                </div>
            </pre>
        </form>
    </div>
    <form action="/list" method="get">
        <button type="submit" class="btn btn-secondary">Cancel</a>
    </form>
    
</div>

<%- contentFor('title') %>
Update