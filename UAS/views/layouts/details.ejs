<div class="det">
    <div class="judul my-5">
        <h3><%- judul %></h3>
    </div>
    <div class="row">
        <div class="col-lg-3 text-center mx-5">
            <img src="/public/img/<%- image %>" alt="fer" class="w-100">
        </div>
        <div class="col my-3">
            <h4>Details</h4>
            <pre>
<b>Judul</b>       : <%- judul %>
<b>Author</b>      : <%- author %>
<b>Tahun</b>       : <%- year %>
<b>ISBN</b>        : <%- isbn %>
<b>Lokasi</b>      : <%- pos %>
<b>Stok</b>        : <%- stock %>
            </pre>
        </div>
    </div> <hr>
    <div class="row my-5 w-75 mx-5">
        <h4>Sinopsis</h4>
        <p><%- sinopsis %></p>
    </div> <hr>
    <div class="row mx-5">
        <h4>Rating</h4> <hr>
        <span class="fa fa-star checked my-auto"></span>
        <span class="fa fa-star checked my-auto"></span>
        <span class="fa fa-star checked my-auto"></span>
        <span class="fa fa-star checked my-auto"></span>
        <span class="fa fa-star checked my-auto"></span>
    </div>
</div>

<%- contentFor('title') %>
