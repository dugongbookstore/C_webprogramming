<!-- Carousel -->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block" src="/public/img/promogabungan.png" alt="Promo1" onclick="window.open('/promo#promo2')">
        </div>
        <div class="carousel-item">
            <img class="d-block" src="/public/img/promo3.png" alt="Promo2" onclick="window.open('/promo#promo3')">
        </div>
        <div class="carousel-item">
            <img class="d-block" src="/public/img/na.png" alt="NewArriv">
            <div class="carousel-caption d-none d-md-block">
                <h1>New Arrival</h1>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<!-- Button Lihat Semua Promo -->
<div class="text-center">
    <a href="/promo" class="btn mx-auto btn-outline-primary ">Lihat Semua Promo</a>
</div>
<!-- Best Seller -->
<div class="container">
    <h1>Best Seller</h1>
    <div class="row">
        <div class="card mx-auto my-4" onclick="window.open('/kl2','mywindow')">
            <img src="/public/img/kl2.jpg">
        </div>
        <div class="card mx-auto my-4"  onclick="window.open('/ki1','mywindow')"">
            <img src="/public/img/ki1.png">
        </div>
        <div class="card mx-auto my-4" onclick="window.open('/nl6','mywindow')">
            <img src="/public/img/nl6.jpg">
        </div>
        <div class="card mx-auto my-4" onclick="window.open('/ni2','mywindow')">
            <img src="/public/img/ni2.png">
        </div>
        <div class="card mx-auto my-4" onclick="window.open('/kl6','mywindow')">
            <img src="/public/img/kl6.jpg">
        </div>
    </div>
</div>
<!--Newsletter-->
<div id="news"></div>
<div class="subscribe mx-auto">
    <h3>Subscribe untuk mendapatkan promo menarik!</h3>
    <br>
    <form action="/email" method="post" class="form-inline justify-content-center">
        <input type="email" class="form-control form-control-lg col-5" name="newsLetter" required placeholder="Email anda" value>
        <input type="submit" class="btn btn-primary ml-3" name="submit" value="Dapatkan promo!">
        <% if (locals.error) { %>
            <span class="text-danger pl-2"><b><%= error %></b></span>
        <% } else if (locals.msg) { %>
            <span class="text-success pl-2"><b><%= msg %></b></span>
        <% } %>
    </form>
    <br>
</div>
    
<%- contentFor('title') %>
